{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": false,
		"experimentalDecorators": true,
		"newLine": "LF",
		"allowJs": true,
    "checkJs": true,
    "esModuleInterop": true
	},
	"exclude": [
		"node_modules/**"
	]
}